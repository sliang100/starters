colorscheme molokai
filetype plugin indent on
set background=dark

set nocompatible
set softtabstop=2
set tabstop=2
set backspace=indent,eol,start
set expandtab
set shiftwidth=2
set showmatch
set mouse=a
syntax on

set ruler
set showcmd

set smartcase

set statusline+=%f
set ls=2
set number

set textwidth=80
set wrapmargin=2
set formatoptions+=t
set wrap
set linebreak
